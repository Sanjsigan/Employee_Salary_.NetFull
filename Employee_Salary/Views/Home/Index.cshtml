            <tr>
                <td>Amount of This Tax</td>
                <td><input name="travel_tax" id="travel_tax" readonly class=" border-0" value="@Model.travel" /></td>
            </tr>
        </table>
    </div>
    <br />
    <h4 class="display-7">Income Tax Informtion</h4>
    <h5 class="display-8">First Tax</h5>
