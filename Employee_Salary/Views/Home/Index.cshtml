@model Employee_Salary.Models.salary

@{
    ViewData["Title"] = "Home Page";
}

<form class="form-group" method="post">

    <h1 class="display-3">Gross Salary To Net Salary</h1>
    <input type="hidden" name="mode" value="PinRequest" />

    <div class="form-group">
        <label for="exampleInputPassword1">Type Gross Salary</label>
        <input class="form-control" value="@Model.price" name="price" placeholder="Your Price">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Net Salary</label>
        <input class="form-control" name="tot_amount" id="tot_amount" value="@Model.total_price" readonly />
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Total Tax</label>
        <input class="form-control" name="tot_minus" id="tot_minus" type="text" value="@Model.minus" readonly />
    </div>
    <div class="form-group">
        <button class="btn btn-success" type="submit">Ok</button>
    </div>


    <br />
    <h4 class="display-5">Description of Persantage</h4>
    <h4 class="display-7">Tax1</h4>
    <div class="form-group">
        <table class="table">

            <tr>
                <td>Description</td>
                <td>Food</td>
            </tr>
            <tr>
                <td>Persantage</td>
                <td>5%</td>
            </tr>
            <tr>
                <td>Amount of This Tax</td>
                <td><input name="food_tax" id="food_tax" readonly class=" border-0" value="@Model.tax"/></td>
            </tr>
        </table>
    </div>
    <h4 class="display-7">Tax2</h4>
